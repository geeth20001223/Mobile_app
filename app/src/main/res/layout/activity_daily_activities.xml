<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activityback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="60dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_activities"
            android:textColor="#FA188C"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <CheckBox
            android:id="@+id/checkWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_water"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkYoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_yoga"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkHealthyFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_healthy_food"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_music"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkMeditation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_meditation"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnCheckActivities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FA188C"
            android:padding="12dp"
            android:text="@string/check_progress"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnhome"
            android:layout_width="222dp"
            android:layout_height="103dp"
            android:backgroundTint="#8D16B1"
            android:padding="12dp"
            android:text="Home"
            android:textColor="#FFF"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
