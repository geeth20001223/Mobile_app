<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp">

            <!-- Nutrition Tips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/nutritionImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/food"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/nutrition_image_desc" />

                <TextView
                    android:id="@+id/nutritionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nutrition_tips"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/nutritionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watch_video"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Mother Skincare -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/skincareImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/skincare"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/skincare_image_desc" />

                <TextView
                    android:id="@+id/skincareTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mother_skincare"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/skincareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watch_video"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Yoga -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/yogaImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/yoga"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/yoga_image_desc" />

                <TextView
                    android:id="@+id/yogaTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yoga"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/yogaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watch_video"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Home Button at the Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#8D16B1"
            android:padding="10dp"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
