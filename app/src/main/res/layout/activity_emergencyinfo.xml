<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Button to Show Nearby Hospitals -->
    <Button
        android:id="@+id/btnShowHospitals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Nearby Hospitals"
        android:textSize="18sp"
        android:backgroundTint="#FF4081"
        android:textColor="#FFF"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <!-- TextView to Display Hospitals -->
    <TextView
        android:id="@+id/tvHospitals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospitals:"
        android:textSize="16sp"
        android:textColor="#333"
        android:padding="8dp"
        android:visibility="gone"/>

    <!-- ListView for displaying hospital names -->
    <ListView
        android:id="@+id/listHospitals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:layout_marginBottom="20dp"/>

    <!-- TextView for Doctors (if needed) -->
    <TextView
        android:id="@+id/tvDoctors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctors:"
        android:textSize="16sp"
        android:textColor="#333"
        android:padding="8dp"
        android:visibility="gone"/>

    <!-- ListView for displaying doctors (optional) -->
    <ListView
        android:id="@+id/listDoctors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>
</LinearLayout>