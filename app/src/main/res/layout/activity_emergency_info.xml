<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/layoutEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Button to Show Nearby Hospitals -->

        <!-- TextView to Display Hospitals -->

        <Button
            android:id="@+id/btnShowHospitals"
            android:layout_width="308dp"
            android:layout_height="223dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF4081"
            android:padding="12dp"
            android:text="Show Nearby Hospitals"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvHospitals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Hospitals:"
            android:textColor="#333"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- ListView for displaying hospital names -->
        <ListView
            android:id="@+id/listHospitals"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:visibility="gone" />

        <!-- TextView for Doctors -->
        <TextView
            android:id="@+id/tvDoctors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Doctors:"
            android:textColor="#333"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- ListView for displaying doctors -->
        <ListView
            android:id="@+id/listDoctors"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:visibility="gone" />

        <!-- Button at Bottom -->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#8D16B1"
            android:padding="12dp"
            android:text="Home"
            android:textColor="#FFF"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
