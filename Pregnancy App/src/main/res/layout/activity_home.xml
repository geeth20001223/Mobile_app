<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Beauty!"
        android:textSize="24sp"
        android:textStyle="italic"
        android:textColor="#E91E63"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Baby Size Text -->
    <TextView
        android:id="@+id/babySizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baby is the size of a mango"
        android:textSize="18sp"
        android:textColor="#757575"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Baby Image -->

    <!-- Week Number -->
    <ImageView
        android:id="@+id/babyImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Baby Image"
        android:src="@drawable/babywomb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/babySizeText"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/weekNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week 7"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/babyImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Grid Layout for Buttons -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:columnCount="3"
        app:layout_constraintTop_toBottomOf="@id/weekNumberText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rowCount="3">

        <!-- Track Health -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/trackHealthButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/healthtrack1"
                android:contentDescription="Track Health"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Health"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Kick Tracker -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/kickTrackerButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/kicktrack1"
                android:contentDescription="Kick Tracker"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kick Tracker"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Education -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/educationButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/education1"
                android:contentDescription="Education"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Mental Health -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/mentalHealthButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mentalhealth1"
                android:contentDescription="Mental Health"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mental Health"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Daily Activity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/dailyActivityButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/activityback"
                android:contentDescription="Daily Activity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Activity"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Reminders -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/remindersButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/reminder1"
                android:contentDescription="Reminders"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminders"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Emergency -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/emergencyButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/emergency1"
                android:contentDescription="Emergency"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textAlignment="center"/>
        </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>